def BossBattle(PlayerHealth):
    MonsterHealth = 100
    while MonsterHealth >0 and PlayerHealth>0:
        if inventory[i] == "fire spell":
            print("Omg the red bottle was a fire spell! It can catch anything on fire!")
            damage = random.randrange(20,31)
        elif inventory[i] == "sword":
            print("luckliy you have a sword, you can fight him with it!")
            damage = random.randrange(20,31)
        else:
            damage = random.randrange(5,11)
        print("You hit the monster for", damage)
        MonsterHealth -= damage
        print("the monster now has", MonsterHealth, "health left.")
        damage = random.randrange(5, 10)
        print("You hit the monster for", damage)
        PlayerHealth -= damage
        print("You now have", PlayerHealth, "health left, the tiger has ", MonsterHealth, "health left")
        choice = input("press p for potion, any other key to continue")
        if choice == "p":
            if inventory[1]=='potion':
                print("oh look a potion, lemme drink glug glug glug (health+20)")
                PlayerHealth +=20
                inventory[1]="empty"
            else:
                print("sorry, you have no potion")
        elif choice == 'h':
            if inventory[2]=='ham':
                print("you have feed the rtiger the hame, and is happy and goes away!")
                MonsterHealth = 0
            else:
                print("the tiger is not happy that you ate the hame, decicdes to eat you")
                PlayerHealth= 0
                
                
        print()
    if PlayerHealth <=0:
        print("you lost the game")
    else:
        print("yo won th egame!")
    return PlayerHealth

#instruction--------------------
def show_instruction():
    print("You can press 'i', to show instructions and commands ")
    choice = input()
    if choice == 'i':
        print("Enter 'Forward' or 'F ' to go to the next room ahead of you , Enter 'look(item)' to look at something, enter 'back' to go to previous room, enter 'left' to go to the left, enter 'right' to go to the right.")
     
