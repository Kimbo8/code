


#rooms/inventory-------------------------------------------

inventory = []
room = 1
doExit = False
while doExit == False:
    print("Youre Inventory", end = "")
    print(inventory)
    if room == 1:
        print("You've entered the house, youre in the first room, looks like the living room, theres a rageddy lookin couch with a bunch of holes, on the oppisite side of it theres a old cracke television. There is only one other door in that room, you can go through it. Press 'H' or 'Help' for commands")
        choice = input()
        if choice == 'look couch':
            print("the couch is really old and crusty, theres something hidden under it! oh nice its a flashlight!")
            inventory.append("flashlight")
        elif choice == 'h' or choice == 'help':
            print("Enter 'Door' or 'D' to open the doors, Enter 'look(item)' to look at something, enter 'back' to go to previous room, enter 'left' to go to the left, enter 'right' to go to the right ")
        elif choice == 'door' or choice =='Door' or choice == 'd':
            room = 2
        else:
            print("no an option dummy!")
    if room == 2:
        print ("You are in room 2, there is a door to the right and a bookshelf to the left, there are other things but i dont feel like going into detail right now. anyway, enter 'door' to go through, or enter 'back' to go back to the previous room. ")
        if choice == "rug" or choice == "look under rug":
            print("you found a key")
            inventory.append("key")
        choice = input()
        if choice == 'back':
            room = 1
        elif choice == 'door':
            room = 3
        else:
            print("not an option, dummy")
    if room == 3:
        print("you are in room 3 through the 'door' to the hallway or you can go 'back'")
        choice = input()
        if choice == 'door':
          key = False
          for i in range(len(inventory)):
            if inventory [i] == "key":
                key = True
                if key == True:
                    print("you open the door with the key")
                    room = 4
                else:
                    print("the door is locked")
        
        elif choice == 'back':
            room = 2
        else:
            print("not an option ")
        
    if room == 4:
        print("you are in the begining of the hallway you can go to the room 1  or 2. press '1' or '2'. 'back' to go back or keep  'walking'")
        if inventory[0] == 'wood sword':
            print("the monster wasnt affected by your weak sword. you die.")
            doExit = True
        choice = input()
        if choice == '1':
            room = 6
        elif choice == '2':
            room = 7
        elif choice == 'back':
            room = 3
        elif choice == 'walking':
            room = 5
        else:
            print("this door dont work.")
        
    if room == 5:
        print("you are in at the bottom of the hallway, there are 3 room, enter 'stairs' to goto the attic, enter '3' to go to room 3, enter 'kitchen' to enter kitchen")
        choice = input()
        if choice == 'back':
            room = 4
        elif choice == '3':
            room = 8
        elif choice == 'stairs':
             room = 9
        elif choice == 'kitchen':
            room = 10
        else:
            print("not an option")
        
    if room == 6:
        print("you are in room 1 you can go to 'back' to the hallway.")
        choice = input()
        if choice == 'back':
            room = 4
        else:
            print("not an option")
        
    if room == 7:
        print("you are in room 2 you can go to 'back' to the hallway. also theres a  'bookshelf'.Maybe look into it and youll find a secert passage. maybe.")
        choice = input()
        if choice == 'back':
            room = 4
        elif choice == 'bookshelf':
            print("omg you found a secret passage")
            room = 11
        else:
            print("not an option")
        
    if room == 8:
        print("you are in room 3 you can go to 'back' to the bottom of hallway.")
        choice = input()
        if choice == 'back':
            room = 5
        else:
            print("not an option")
        
    if room == 9:
        print("you are in the attic you can go to 'back' to the hallway.")
        choice = input()
        if choice == 'back':
            room = 5
        else:
            print("not an option")
            
    if room == 10:
        print("you are in the kitchen you can go to 'back' to the hallway.")
        choice = input()
        if choice == 'back':
            room = 5
        else:
            print("not an option")
        
    if room == 11:
        print("you are in the secret room you can go to 'back' to room 2 .")
        choice = input()
